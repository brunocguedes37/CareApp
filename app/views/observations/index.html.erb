<h1>Observations in <%= @patient.name %></h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Infection</th>
      <th scope="col">Summary</th>
    </tr>
    </thead>
  <tbody>
<% for observation in @observations %>
 <tr>
<td><%= observation.infection %></td>
<td><%= observation.summary %></td>
<td><%= link_to 'Show', patient_observation_path(@patient, observation), class:"btn btn-info" %></td>
<td><%= link_to 'Edit', edit_patient_observation_path(@patient, observation), class:"btn btn-success"  %></td>
<td><%= link_to 'Destroy', patient_observation_path(@patient, observation),:confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>

<br />

<%= link_to 'New ', new_patient_observation_path(@patient) %>
<%= link_to 'Back ', @patient %>


  